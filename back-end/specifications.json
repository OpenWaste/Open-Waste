{
  "openapi": "3.0.0",
  "info": {
    "title": "Waste Sorting API",
    "description": "This is the API of the Waste Sorting App",
    "contact": {
      "email": "you@your-company.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version": "1.0.0-oas3"
  },
  "servers": [
    {
      "url": "https://virtserver.swaggerhub.com/Attack-On-SOEN/Waste_Sorting_API/1.0.0"
    }
  ],
  "tags": [
    {
      "name": "admins",
      "description": "Secured Admin-only calls"
    },
    {
      "name": "developers",
      "description": "Operations available to regular developers"
    }
  ],
  "paths": {
    "/prediction": {
      "post": {
        "tags": [
          "image prediction"
        ],
        "summary": "predicts an image",
        "description": "sends an image to the api to return a predicted result",
        "operationId": "evaluate_image",
        "requestBody": {
          "description": "image to predict",
          "content": {
            "image/png": {
              "schema": {
                "$ref": "#/components/schemas/Image"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "returns the detected waste from the image"
          }
        }
      }
    },
    "/submission": {
      "post": {
        "tags": [
          "image submission"
        ],
        "summary": "submits an image",
        "description": "sends an image to the api to add to the database",
        "operationId": "submit_image",
        "requestBody": {
          "description": "image to submit",
          "content": {
            "waste_name": {
              "schema": {
                "$ref": "#/components/schemas/Image_name"
              }
            },
            "image/png": {
              "schema": {
                "$ref": "#/components/schemas/Image"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "success message"
          },
          "400": {
            "description": "failure message"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Image_name": {
        "required": [
          "name"
        ],
        "type": "string",
        "properties": {
          "name": {
            "type": "string",
            "format": "binary"
          }
        }
      },
      "Image": {
        "required": [
          "image"
        ],
        "type": "object",
        "properties": {
          "image": {
            "type": "object",
            "format": "JPEG",
            "example": "image.jpg"
          }
        }
      }
    }
  }
}